@using System.Security.Claims
@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
<AuthorizeView>

		<Authorized>
			<div class="top-nav-bar">
				<button class="logout-button">
					<?xml version="1.0" ?><svg fill="none" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg"><path d="M17 16L21 12M21 12L17 8M21 12L7 12M13 16V17C13 18.6569 11.6569 20 10 20H6C4.34315 20 3 18.6569 3 17V7C3 5.34315 4.34315 4 6 4H10C11.6569 4 13 5.34315 13 7V8" stroke="#374151" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/></svg>
				</button>
			</div>
			@Body
		</Authorized>
		<NotAuthorized>
			@if (IsOnAuthPage)
			{
				<div class="body-content">
					@Body
				</div>
			}
			else
			{
				<Landing />
			}
		</NotAuthorized>
</AuthorizeView>
@code {
	private ClaimsPrincipal user;
  
	protected override async Task OnInitializedAsync()
	  {
		var authState = await AuthStateProvider.GetAuthenticationStateAsync();
		user = authState.User;
	  }

	private bool IsOnAuthPage =>
    Navigation.Uri.Equals("/login", StringComparison.OrdinalIgnoreCase)
    || Navigation.Uri.Equals("/signup", StringComparison.OrdinalIgnoreCase);
  
  private async Task Logout()
  {
    Navigation.NavigateTo("Identity/Account/Logout", true);
  }
}